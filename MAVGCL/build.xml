<project name="MAVGAnalysis" basedir="." xmlns:fx="javafx:com.sun.javafx.tools.ant">

   <taskdef resource="com/sun/javafx/tools/ant/antlib.xml" uri="javafx:com.sun.javafx.tools.ant"
   	   classpath="/Library/Java/JavaVirtualMachines/jdk1.8.0_51.jdk/Contents/Home/lib/ant-javafx.jar" />


   <target name="distribution">
		<fx:jar destfile="dist/MAVGAnalysis.jar">
			<fx:application mainClass="com.comino.flight.MainApp">
				<!--
				<fx:param name="bindAddress" value="172.168.178.2" />
				<fx:param name="peerAddress" value="172.168.178.1" />
				-->
			</fx:application>

			<fileset dir="bin/">
				<include name="**" />
			</fileset>
			<manifest>
				<attribute name="Main-Class" value="com.comino.flight.MainApp" />
				<attribute name="Class-Path" value="mavcomm.jar jna-4.1.0.jar jssc.jar" />
			</manifest>
		</fx:jar>
		   <copy todir="dist">
			<fileset dir="lib/">
				<include name="mavcomm.jar" />
			</fileset>
		</copy>
	</target>

</project>